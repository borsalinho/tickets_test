<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/blue"
        android:elevation="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="Самый удобный"
        android:textAppearance="@style/title_4"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/grey_3"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="21dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:text="6 990"
            android:textAppearance="@style/title_1"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|center_horizontal|top"
                android:layout_marginRight="8dp"
                tools:srcCompat="@drawable/circle_red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textDepartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/title_4"
                        android:layout_marginBottom="4dp"
                        android:text="03:15" />

                    <TextView
                        android:id="@+id/textDepartAir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/title_4"
                        android:textColor="@color/grey_6"
                        android:text="VKO" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="  -  "
                    android:textColor="@color/grey_5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textArriveTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/title_4"
                        android:layout_marginBottom="4dp"
                        android:text="07:10" />

                    <TextView
                        android:id="@+id/textArriveAir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/title_4"
                        android:textColor="@color/grey_6"
                        android:text="AER" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textFlyTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:text="4ч в пути"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/title_4" />

                    <TextView
                        android:id="@+id/textIsTransfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="/Без пересадок"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/title_4" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

